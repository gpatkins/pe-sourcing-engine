# PE Sourcing Engine v5.7 - Clean Docker Build
# Mirrors dg (Fedora/systemd) working configuration exactly
# Python 3.14.2 to match production

FROM python:3.14.2-slim

LABEL maintainer="Gabriel Atkinson"
LABEL version="5.7"
LABEL description="PE Sourcing Engine - Docker build mirroring dg server"

# System dependencies (minimal, matching dg requirements)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    libxml2-dev \
    libxslt-dev \
    curl \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy and install Python dependencies
# Using exact versions from dg's working setup
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p /app/logs /app/config /app/data

# Expose port
EXPOSE 8000

# Health check (simple, no auth required)
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/login || exit 1

# Run uvicorn exactly as dg does (single worker, host 0.0.0.0, port 8000)
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
